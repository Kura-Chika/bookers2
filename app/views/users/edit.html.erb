<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>User info</h2>
        <% if @user.errors.any? %>
          <div class="error">
            <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj form being saved:</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <%= form_with model: @user do |f| %>
        <div>
          <%= f.label :Name %><br>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div>
          <%= f.label :Image %><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div>
          <%= f.label :Introduction %><br>
          <%= f.text_area :introduction, autofocus: true %>
        </div>
        <div>
          <%= f.submit "Update User" %>
        </div>
      <% end %>
    </div>
  </div>
</div>