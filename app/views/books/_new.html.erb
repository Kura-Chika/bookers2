<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div>
  <%= link_to edit_user_path(user), class: "btn btn-block btn-outline-secondary" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model: newbook do |f| %>
  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body, class: "form-control mb-3" %>
  </div>
  <div>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>
