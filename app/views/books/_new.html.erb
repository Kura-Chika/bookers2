<div>
  <h1>User info</h1>
  <%= image_tag user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <%= link_to edit_user_path(user) do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
</div>
<div>
  <h1>New book</h1>
  <%= form_with model: book do |f| %>
    <div class="field">
      <%= f.label :Title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :Opinion %><br>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>
