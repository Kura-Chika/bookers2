<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <div class="error">
          <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj form being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @book, method: :patch do |f| %>
        <div class="field">
          <%= f.label :Title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :Opinion %><br>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit 'Update Book' %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
