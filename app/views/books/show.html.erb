<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>

<% end %>

<div>
  <h1>Book detail</h1>
  <table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user) do %>
            <%= image_tag @user.get_profile_image %><br>
            <%= @user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
        <% if @user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book) %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book), method: :delete %>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
